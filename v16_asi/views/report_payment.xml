<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_payment_receipt_document_asi" 
            inherit_id="account.report_payment_receipt_document">
            <div class="page" position="replace">
                <div class="page">
                    <table class="table table-condensed">
                        <tr>
                            <td width="25%" rowspan="6"
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:20px;border:0px;">
                                <img src='v16_asi/static/description/logo_asi.png' 
                                    style="text-align:left;max-width:100%;vertical-align:bottom;"/>
                            </td>
                            <td width="30%" rowspan="6"
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:30px;border:0px;">
                                <strong>BANK VOUCHER</strong>
                            </td>
                            <td width="20%" 
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:10px;border:1px solid black;">
                                No. Dokumen
                            </td>
                            <td width="20%" 
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                ASI-FA-FR-030-00
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:10px;border:1px solid black;">
                                Mulai Berlaku
                            </td>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                3 Januari 2022
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:10px;border:1px solid black;">
                                Revisi
                            </td>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                00
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:10px;border:1px solid black;">
                                Tanggal Revisi
                            </td>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                -
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:10px;border:1px solid black;">
                                Halaman
                            </td>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                1 dari 1
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:10px;border:1px solid black;">
                                Klasifkasi
                            </td>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                <strong>Confidential</strong>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-condensed">
                        <tr>
                            <td width="60%" colspan="2"
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:14px;
                                border-top:1px solid black;
                                border-bottom:0px;
                                border-left:0px;
                                border-right:0px;">
                                <strong><span t-field="o.company_id.name"/></strong>
                            </td>
                            <td width="40%" colspan="2"
                                style="text-align:right;vertical-align:middle;padding:2px;font-size:14px;
                                border-top:1px solid black;
                                border-bottom:0px;
                                border-left:0px;
                                border-right:0px;">
                                <strong>VOUCHER OUT</strong>
                            </td>
                        </tr>
                        <tr>
                            <td width="5%"
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:0px;">
                                <strong>Payee :</strong>
                            </td>
                            <td width="50%"
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:0px;">
                                <strong><span t-field="o.partner_id.name"/></strong>
                            </td>
                            <td colspan="2"
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:0px;">
                                <strong>Expense/Asset/Advance</strong>
                            </td>
                        </tr>
                        <tr>
                            <td width="5%"
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:0px;">
                            </td>
                            <td width="50%"
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:0px;">
                                <strong><span t-field="o.partner_id.street"/></strong>
                            </td>
                            <td style="text-align:right;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                Date :
                            </td>
                            <td width="20%"
                                style="text-align:right;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                <span t-field="o.date"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:0px;">
                            </td>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:0px;">
                            </td>
                            <td style="text-align:right;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                Voucher No :
                            </td>
                            <td style="text-align:right;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:0px;">
                            </td>
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:12px;border:0px;">
                            </td>
                            <td style="text-align:right;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                Cheque No :
                            </td>
                            <td style="text-align:right;vertical-align:middle;padding:2px;font-size:12px;border:1px solid black;">
                                <!-- <span t-field="o.cheque_reference"/> -->
                            </td>
                        </tr>
                        <tr height="15px">
                            <td style="text-align:left;vertical-align:middle;padding:2px;font-size:14px;border:0px;">
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4"
                                style="text-align:left;vertical-align:middle;padding:2px;font-size:14px;
                                border-top:1px solid black;
                                border-bottom:0px;
                                border-left:0px;
                                border-right:0px;">
                                <strong>Memo : <span t-field="o.ref"/></strong>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-condensed">
                        <tr>
                            <td width="10%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                <strong>Date</strong>
                            </td>
                            <td width="15%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                <strong>PO #</strong>
                            </td>
                            <td width="15%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                <strong>Supplier Invoice</strong>
                            </td>
                            <td width="20%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                <strong>Description</strong>
                            </td>
                            <td width="10%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                <strong>Qty</strong>
                            </td>
                            <td width="15%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                <strong>Unit Price</strong>
                            </td>
                            <td width="20%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                <strong>Amount</strong>
                            </td>
                        </tr>
                        <t t-if="o.reconciled_bill_ids">
                            <t t-foreach="o.reconciled_bill_ids" t-as="invoice">
                                <t t-foreach="invoice.invoice_line_ids" t-as="line">
                                    <tr>
                                        <td style="text-align:left;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="invoice.invoice_date"/>
                                        </td>
                                        <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="invoice.payment_reference"/>
                                        </td>
                                        <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="invoice.ref"/>
                                        </td>
                                        <td style="text-align:left;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(line.price_unit)"/>
                                        </td>
                                        <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(line.price_subtotal)"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="6" 
                                        style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border-top:1px solid black;
                                        border-bottom:0px;
                                        border-left:1px solid black;
                                        border-right:1px solid black;">
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border:1px solid black;">
                                        <strong><span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(invoice.amount_untaxed)"/></strong>
                                    </td>
                                </tr>
                                <t t-if="invoice.amount_vat != 0">
                                    <tr>
                                        <td colspan="6" 
                                            style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                            border-top:0px;
                                            border-bottom:0px;
                                            border-left:1px solid black;
                                            border-right:1px solid black;">
                                            <strong>VAT In</strong>
                                        </td>
                                        <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                            border:1px solid black;">
                                            <strong><span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(invoice.amount_vat)"/></strong>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="invoice.amount_pph != 0">
                                    <tr>
                                        <td colspan="6" 
                                            style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                            border-top:0px;
                                            border-bottom:0px;
                                            border-left:1px solid black;
                                            border-right:1px solid black;">
                                            <strong>Witholding Tax</strong>
                                        </td>
                                        <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                            border:1px solid black;">
                                            <strong><span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(invoice.amount_pph)"/></strong>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="6" 
                                        style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border-top:0px;
                                        border-bottom:1px solid black;
                                        border-left:1px solid black;
                                        border-right:1px solid black;">
                                        <strong>Total</strong>
                                    </td>
                                    <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border:1px solid black;">
                                        <strong><span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(invoice.amount_total)"/></strong>
                                    </td>
                                </tr>
                            </t>
                        </t>
                        <t t-if="o.reconciled_invoice_ids">
                            <t t-foreach="o.reconciled_invoice_ids" t-as="invoice">
                                <t t-foreach="invoice.invoice_line_ids" t-as="line">
                                    <tr>
                                        <td style="text-align:left;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="invoice.invoice_date"/>
                                        </td>
                                        <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="invoice.payment_reference"/>
                                        </td>
                                        <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="invoice.payment_reference"/>
                                        </td>
                                        <td style="text-align:left;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(line.price_unit)"/>
                                        </td>
                                        <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;border:1px solid black;">
                                            <span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(line.price_total)"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="6" 
                                        style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border-top:1px solid black;
                                        border-bottom:1px solid black;
                                        border-left:1px solid black;
                                        border-right:1px solid black;">
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border:1px solid black;">
                                        <strong><span t-field="invoice.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(invoice.amount_untaxed)"/></strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="6" 
                                        style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border:1px solid black;">
                                        <strong>VAT In</strong>
                                    </td>
                                    <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border:1px solid black;">
                                        <strong><span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(invoice.amount_vat)"/></strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="6" 
                                        style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border:1px solid black;">
                                        <strong>Witholding Tax</strong>
                                    </td>
                                    <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border:1px solid black;">
                                        <strong><span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(invoice.amount_pph)"/></strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="6" 
                                        style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border:1px solid black;">
                                        <strong>Total</strong>
                                    </td>
                                    <td style="text-align:right;vertical-align:middle;padding:5px;font-size:12px;
                                        border:1px solid black;">
                                        <strong><span t-field="o.currency_id.symbol"/> <span t-esc="'{0:,.2f}'.format(invoice.amount_total)"/></strong>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </table>
                    <table class="table table-condensed">
                        <tr>
                            <td width="100%" 
                                style="text-align:left;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                Say : <span t-field="o.amount_bank_terbilang"/>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-condensed">
                        <tr>
                            <td width="20%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                Submitted by,
                            </td>
                            <td width="20%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                Checked/Verified by,
                            </td>
                            <td width="20%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                Approved by,
                            </td>
                            <td width="20%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                Payment Completed by,
                            </td>
                            <td width="20%" 
                                style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                Payment Received by,
                            </td>
                        </tr>
                        <tr height="100px"></tr>
                        <tr>
                            <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                <span t-field="o.submitted_user_id.name"/>
                            </td>
                            <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                <span t-field="o.checked_user_id.name"/>
                            </td>
                            <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                <span t-field="o.approved_user_id.name"/>
                            </td>
                            <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                <span t-field="o.payment_user_id.name"/>
                            </td>
                            <td style="text-align:center;vertical-align:middle;padding:5px;font-size:12px;border:0px;">
                                (____________________)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </template>

    </data>
</odoo>

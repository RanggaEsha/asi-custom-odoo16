<odoo>    
    <data>
        <record id="sale_order_inherit_form" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_participants"
                                context="{'default_sale_order_id': active_id}"
                                icon="fa-users"
                                attrs="{'invisible': [('has_participant_data', '=', False)]}">
                                <field string="Participants" name="participant_count" widget="statinfo"/>
                    </button>
                </div>

                 <!-- Add participant data field using xpath -->
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="participant_count" invisible="1"/>
                    <field name="has_participant_data" string="Has Participant Data" attrs="{'readonly': [('participant_count', '>', 0), ('state', 'in', ['sale', 'closed'])]}"/>
                </xpath>

                <!-- OPTION 3: Add to existing Extra Info tab -->
                <xpath expr="//sheet/group" position="after">
                    <group string="Assessment Information" attrs="{'invisible': [('has_participant_data', '=', False)]}" col="4">
                        <label for="test_start_date" string="Assessment Period" colspan="1"/>
                        <div colspan="3">
                            <field name="test_start_date" class="oe_inline" style="width: 45%;"/>
                            <span style="margin: 0 8px;">to</span>
                            <field name="test_finish_date" class="oe_inline" style="width: 45%;"/>
                        </div>
                        
                        <!-- REFACTORED: Many2many field with options -->
                        <label for="type_of_assessment" string="Type of Assessment" colspan="1"/>
                        <div colspan="3">
                            <field name="type_of_assessment" widget="many2many_tags"
    style="width: 300px; min-width: 300px;"
    options="{'color_field': 'color', 'no_create_edit': False, 'no_create': False}"/>
                            <button name="%(action_assessment_type)d" 
                                    type="action" 
                                    icon="fa-cog" 
                                    class="btn-link" 
                                    title="Configure Assessment Types"
                                    style="margin-left: 5px;"/>
                        </div>
                        
                        <!-- REFACTORED: Many2many field with options -->
                        <label for="assessment_language" string="Assessment Language" colspan="1"/>
                        <div colspan="3">
                            <field name="assessment_language" widget="many2many_tags"
    style="width: 300px; min-width: 300px;"
    options="{'color_field': 'color', 'no_create_edit': False, 'no_create': False}"
    context="{'form_view_ref': 'your_module.crm_assessment_language_form_view'}"/>
                            <button name="%(action_assessment_language)d" 
                                    type="action" 
                                    icon="fa-cog" 
                                    class="btn-link" 
                                    title="Configure Assessment Languages"
                                    style="margin-left: 5px;"/>
                        </div>
                        
                        <label for="purpose" string="Purpose" colspan="1"/>
                        <div colspan="3">
                            <field name="purpose" class="oe_inline" placeholder="What is the purpose of this assessment?" style="width: 400px; min-width: 400px;"/>
                        </div>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
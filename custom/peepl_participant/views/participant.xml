<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Participant Tree View -->
        <record id="participant_tree_view" model="ir.ui.view">
            <field name="name">participant.tree</field>
            <field name="model">participant</field>
            <field name="arch" type="xml">
                <tree string="Participants" editable="bottom" 
                      decoration-success="state == 'confirmed'" 
                      decoration-warning="state == 'rescheduled'"
                      decoration-danger="state == 'cancelled'"
                      decoration-muted="state == 'not_yet_confirmed'">
                    <field name="sequence" widget="handle"/>
                    <field name="first_name" required="1"/>
                    <field name="last_name" required="1"/>
                    <field name="gender"/>
                    <field name="email_address"/>
                    <field name="mobile_phone"/>
                    <field name="job_title_requiring_assessment"/>
                    <field name="position_level"/>
                    <field name="state" widget="badge" readonly="1"
                           decoration-success="state == 'confirmed'"
                           decoration-warning="state == 'rescheduled'"
                           decoration-danger="state == 'cancelled'"
                           decoration-info="state == 'not_yet_confirmed'"/>
                    <field name="completion_date" readonly="1"/>
                    <field name="notes"/>
                    <field name="active" optional="hide"/>
                    <field name="lead_id" readonly="1"/>
                    <field name="sale_order_id" readonly="1"/>
                </tree>
            </field>
        </record>


        <!-- Participant Search View -->
        <record id="participant_search_view" model="ir.ui.view">
            <field name="name">participant.search</field>
            <field name="model">participant</field>
            <field name="arch" type="xml">
                <search string="Search Participants">
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="email_address"/>
                    <field name="job_title_requiring_assessment"/>
                    <field name="position_level"/>
                    <field name="gender"/>
                    <field name="lead_id"/>
                    <field name="sale_order_id"/>
                    <separator/>
                    <filter string="Not Yet Confirmed" name="not_confirmed" domain="[('state', '=', 'not_yet_confirmed')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Rescheduled" name="rescheduled" domain="[('state', '=', 'rescheduled')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Lead/Opportunity" name="lead" context="{'group_by': 'lead_id'}"/>
                        <filter string="Sale Order" name="sale_order" context="{'group_by': 'sale_order_id'}"/>
                        <filter string="Gender" name="gender" context="{'group_by': 'gender'}"/>
                        <filter string="Job Title" name="job_title" context="{'group_by': 'job_title_requiring_assessment'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Participant Kanban View -->
        <record id="participant_kanban_view" model="ir.ui.view">
            <field name="name">participant.kanban</field>
            <field name="model">participant</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="email_address"/>
                    <field name="job_title_requiring_assessment"/>
                    <field name="position_level"/>
                    <field name="state"/>
                    <field name="lead_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-8">
                                        <strong><t t-esc="record.first_name.value"/> <t t-esc="record.last_name.value"/></strong>
                                    </div>
                                    <div class="col-4">
                                        <span class="badge badge-pill" t-attf-class="badge-#{record.state.value == 'confirmed' ? 'success' : record.state.value == 'rescheduled' ? 'warning' : record.state.value == 'cancelled' ? 'danger' : 'secondary'}">
                                            <t t-esc="record.state.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <span class="text-muted">Job: </span><field name="job_title_requiring_assessment"/>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Level: </span><field name="position_level"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <span class="text-muted">Email: </span><field name="email_address"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <span class="text-muted">Lead: </span><field name="lead_id"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

         <!-- Action for viewing participants -->
        <record id="action_view_lead_participants" model="ir.actions.act_window">
            <field name="name">Participants</field>
            <field name="res_model">participant</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('lead_id', '=', active_id)]</field>
            <field name="context">{'default_lead_id': active_id, 'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No participants yet!
                </p>
                <p>
                    Add participants for this lead/opportunity. You can also import participant data from Excel or CSV files.
                </p>
            </field>
        </record>

        <!-- Action for viewing sale order participants -->
        <record id="action_view_sale_order_participants" model="ir.actions.act_window">
            <field name="name">Participants</field>
            <field name="res_model">participant</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('sale_order_id', '=', active_id)]</field>
            <field name="context">{'default_sale_order_id': active_id, 'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No participants yet!
                </p>
                <p>
                    Add participants for this sale order. You can also import participant data from Excel or CSV files.
                </p>
            </field>
        </record>

        <!-- Participant Action -->
        <record id="action_participant" model="ir.actions.act_window">
            <field name="name">Participants</field>
            <field name="res_model">participant</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="participant_search_view"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first participant!
                </p>
                <p>
                    Manage participant data for your leads and opportunities.
                    You can import participants from Excel or CSV files.
                </p>
            </field>
        </record>

        <!-- Menu Item for Participants -->
        <menuitem id="menu_participant" 
                  name="Participants" 
                  parent="crm.crm_menu_sales" 
                  action="action_participant"
                  sequence="20"/>

    </data>
</odoo>
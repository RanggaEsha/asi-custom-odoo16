<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_crm_activity_dashboard_user" model="res.groups">
        <field name="name">CRM Activity Dashboard User</field>
        <field name="category_id" ref="base.module_category_sales"/>
        <field name="implied_ids" eval="[(4, ref('crm.group_use_lead'))]"/>
        <field name="comment">Users can access the CRM Activity Dashboard to view all CRM activities</field>
    </record>

    <record id="group_crm_activity_dashboard_manager" model="res.groups">
        <field name="name">CRM Activity Dashboard Manager</field>
        <field name="category_id" ref="base.module_category_sales"/>
        <field name="implied_ids" eval="[(4, ref('dashboard_crm_activity.group_crm_activity_dashboard_user'))]"/>
        <field name="comment">Managers can access and manage the CRM Activity Dashboard with full permissions</field>
    </record>

    <!-- Menu access rules -->
    <record id="rule_crm_activity_dashboard_access" model="ir.rule">
        <field name="name">CRM Activity Dashboard Access</field>
        <field name="model_id" ref="mail.model_mail_activity"/>
        <field name="domain_force">[('res_model', '=', 'crm.lead')]</field>
        <field name="groups" eval="[(4, ref('group_crm_activity_dashboard_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Manager access with write permissions -->
    <record id="rule_crm_activity_dashboard_manager_access" model="ir.rule">
        <field name="name">CRM Activity Dashboard Manager Access</field>
        <field name="model_id" ref="mail.model_mail_activity"/>
        <field name="domain_force">[('res_model', '=', 'crm.lead')]</field>
        <field name="groups" eval="[(4, ref('group_crm_activity_dashboard_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>

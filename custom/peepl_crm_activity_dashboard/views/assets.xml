<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced Assets for CRM Activity Dashboard -->
    <template id="crm_activity_dashboard_assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <!-- Enhanced JavaScript Files -->
            <script type="text/javascript" src="/peepl_crm_activity_dashboard/static/src/js/activity_done_success.js"/>
            <script type="text/javascript" src="/peepl_crm_activity_dashboard/static/src/js/crm_activity_dashboard_enhanced.js"/>
            
            <!-- Enhanced CSS Styles -->
            <style type="text/css">
                /* CRM Activity Dashboard Enhanced Styling */
                
                /* Row color coding with improved visibility */
                .o_list_view .o_data_row.decoration-danger {
                    background-color: #ffebee !important;
                    border-left: 4px solid #f44336 !important;
                    box-shadow: 0 1px 3px rgba(244, 67, 54, 0.2);
                }
                
                .o_list_view .o_data_row.decoration-warning {
                    background-color: #fff3e0 !important;
                    border-left: 4px solid #ff9800 !important;
                    box-shadow: 0 1px 3px rgba(255, 152, 0, 0.2);
                }
                
                .o_list_view .o_data_row.decoration-info {
                    background-color: #e3f2fd !important;
                    border-left: 4px solid #2196f3 !important;
                    box-shadow: 0 1px 3px rgba(33, 150, 243, 0.2);
                }
                
                .o_list_view .o_data_row.decoration-success {
                    background-color: #e8f5e8 !important;
                    border-left: 4px solid #4caf50 !important;
                    box-shadow: 0 1px 3px rgba(76, 175, 80, 0.2);
                }
                
                .o_list_view .o_data_row.decoration-muted {
                    background-color: #fafafa !important;
                    border-left: 4px solid #9e9e9e !important;
                    box-shadow: 0 1px 3px rgba(158, 158, 158, 0.2);
                }
                
                /* Enhanced hover effects */
                .o_list_view .o_data_row:hover {
                    transform: translateY(-1px);
                    transition: all 0.2s ease;
                }
                
                /* Status badges with enhanced styling */
                .badge.o_field_badge.decoration-danger {
                    background-color: #f44336 !important;
                    color: white !important;
                    box-shadow: 0 2px 4px rgba(244, 67, 54, 0.3);
                    animation: pulse-red 2s infinite;
                }
                
                .badge.o_field_badge.decoration-warning {
                    background-color: #ff9800 !important;
                    color: white !important;
                    box-shadow: 0 2px 4px rgba(255, 152, 0, 0.3);
                    animation: pulse-orange 2s infinite;
                }
                
                .badge.o_field_badge.decoration-info {
                    background-color: #2196f3 !important;
                    color: white !important;
                    box-shadow: 0 2px 4px rgba(33, 150, 243, 0.3);
                }
                
                .badge.o_field_badge.decoration-success {
                    background-color: #4caf50 !important;
                    color: white !important;
                    box-shadow: 0 2px 4px rgba(76, 175, 80, 0.3);
                }
                
                .badge.o_field_badge.decoration-muted {
                    background-color: #9e9e9e !important;
                    color: white !important;
                    box-shadow: 0 2px 4px rgba(158, 158, 158, 0.3);
                }
                
                /* Pulse animations for urgent items */
                @keyframes pulse-red {
                    0% { box-shadow: 0 2px 4px rgba(244, 67, 54, 0.3); }
                    50% { box-shadow: 0 2px 8px rgba(244, 67, 54, 0.6); }
                    100% { box-shadow: 0 2px 4px rgba(244, 67, 54, 0.3); }
                }
                
                @keyframes pulse-orange {
                    0% { box-shadow: 0 2px 4px rgba(255, 152, 0, 0.3); }
                    50% { box-shadow: 0 2px 8px rgba(255, 152, 0, 0.6); }
                    100% { box-shadow: 0 2px 4px rgba(255, 152, 0, 0.3); }
                }
                
                /* Form view enhancements */
                .o_form_view .alert-success {
                    border-radius: 8px;
                    border: 2px solid #4caf50;
                    background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%);
                    animation: success-glow 3s ease-in-out;
                }
                
                @keyframes success-glow {
                    0% { box-shadow: 0 0 5px rgba(76, 175, 80, 0.3); }
                    50% { box-shadow: 0 0 20px rgba(76, 175, 80, 0.6); }
                    100% { box-shadow: 0 0 5px rgba(76, 175, 80, 0.3); }
                }
                
                /* Completed badge styling */
                .badge-success {
                    background-color: #4caf50 !important;
                    color: white !important;
                    font-weight: bold;
                    border-radius: 15px;
                    padding: 5px 12px;
                    font-size: 11px;
                    animation: completed-bounce 0.6s ease-out;
                }
                
                @keyframes completed-bounce {
                    0% { transform: scale(0); }
                    50% { transform: scale(1.2); }
                    100% { transform: scale(1); }
                }
                
                /* Kanban card enhancements */
                .oe_kanban_card {
                    transition: all 0.3s ease;
                    border-radius: 8px;
                    overflow: hidden;
                }
                
                .oe_kanban_card:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
                }
                
                /* Priority widget enhanced styling */
                .o_priority_star {
                    color: #ffc107;
                    filter: drop-shadow(0 1px 2px rgba(0,0,0,0.2));
                }
                
                /* Status bar enhancement */
                .o_statusbar_status .o_arrow_button {
                    border-radius: 6px;
                    margin: 0 2px;
                    transition: all 0.2s ease;
                }
                
                .o_statusbar_status .o_arrow_button.btn-success {
                    background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
                    animation: success-pulse 2s infinite;
                }
                
                @keyframes success-pulse {
                    0% { transform: scale(1); }
                    50% { transform: scale(1.05); }
                    100% { transform: scale(1); }
                }
                
                /* Loading states */
                .activity-loading {
                    opacity: 0.6;
                    pointer-events: none;
                }
                
                .activity-loading::after {
                    content: '';
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    width: 20px;
                    height: 20px;
                    margin: -10px 0 0 -10px;
                    border: 2px solid #4caf50;
                    border-radius: 50%;
                    border-top-color: transparent;
                    animation: spin 1s linear infinite;
                }
                
                @keyframes spin {
                    to { transform: rotate(360deg); }
                }
                
                /* Success indicator for refresh */
                .refresh-indicator {
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
                    color: white;
                    padding: 8px 16px;
                    border-radius: 20px;
                    font-size: 12px;
                    font-weight: 500;
                    z-index: 1000;
                    box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
                }
                
                /* Enhanced button styling */
                .btn-primary {
                    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
                    border: none;
                    box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
                    transition: all 0.2s ease;
                }
                
                .btn-primary:hover {
                    transform: translateY(-1px);
                    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.4);
                }
                
                .btn-success {
                    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
                    border: none;
                    box-shadow: 0 2px 8px rgba(40, 167, 69, 0.3);
                    transition: all 0.2s ease;
                }
                
                .btn-success:hover {
                    transform: translateY(-1px);
                    box-shadow: 0 4px 12px rgba(40, 167, 69, 0.4);
                }
                
                /* Form field enhancements */
                .o_field_widget.o_field_many2one_avatar_user .o_m2o_avatar {
                    border: 2px solid #e0e0e0;
                    transition: border-color 0.2s ease;
                }
                
                .o_field_widget.o_field_many2one_avatar_user:hover .o_m2o_avatar {
                    border-color: #4caf50;
                }
                
                /* Responsive enhancements */
                @media (max-width: 768px) {
                    .oe_kanban_card {
                        margin-bottom: 10px;
                    }
                    
                    .o_list_view .o_data_row {
                        padding: 8px 4px;
                    }
                    
                    .badge-success {
                        font-size: 10px;
                        padding: 3px 8px;
                    }
                }
            </style>
        </xpath>
    </template>

    <!-- Activity Done Success Template -->
    <template id="activity_done_success_template">
        <t t-name="crm_activity_dashboard.ActivityDoneSuccess">
            <div class="o_activity_done_success">
                <!-- This is handled by JavaScript -->
            </div>
        </t>
    </template>
</odoo>
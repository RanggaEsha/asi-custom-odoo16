        <!-- ========================================= -->
        <!-- DEFAULT ASSESSMENT TYPES -->
        <!-- ========================================= -->
        
        <record id="assessment_type_technical" model="crm.assessment.type">
            <field name="name">Technical Assessment</field>
            <field name="code">TECH</field>
            <field name="description">Evaluate technical skills, programming abilities, and problem-solving capabilities</field>
            <field name="sequence">10</field>
            <field name="color">1</field>
        </record>

        <record id="assessment_type_language" model="crm.assessment.type">
            <field name="name">Language Proficiency Test</field>
            <field name="code">LANG</field>

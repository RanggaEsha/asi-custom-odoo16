<odoo>
    <data>
        
        <record id="view_crm_task_form" model="ir.ui.view">
            <field name="name">crm.task.wizard</field>
            <field name="model">crm.task.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Task">
                       <div class="oe_title">
                        <h1>
                            <span>Create Task from Opportunity</span>
                        </h1>
                    </div>
                    <group>
                        <group string="Task Details">
                            <field name="project_id" domain="[('active', '=', True)]" context="{'default_use_tasks':1}" required="1"/>
                            <field name="name" required="1"/>
                            <field name="user_ids" class="o_task_user_field" options="{'no_open': True}" widget="many2many_avatar_user"/>
                            <field name="dead_line"/>
                        </group>
                    </group>
                    <footer>
                        <button name="create_task" string="Create Task" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_crm_task_form" model="ir.actions.act_window">
            <field name="name">Create Task</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.task.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_crm_task_form"/>
            <field name="target">new</field>
        </record>
        
        <record id="action_view_task_id" model="ir.actions.act_window">
            <field name="name">Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
             <field name="domain">[('lead_id', '=', active_id)]</field>
            <field name="context">{'search_default_lead_id': active_id, 'default_lead_id': active_id}</field>
            <field name="help" type="html">
                <p>
                    Odoo's project management allows you to manage the pipeline of your tasks efficiently. You can track progress, discuss on tasks, attach documents, etc.
                </p>
            </field>
        </record>

        <!-- Tree view for handover leads - MOVED BEFORE ACTION -->
        <record id="crm_lead_handover_tree_view" model="ir.ui.view">
            <field name="name">crm.lead.handover.tree</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <tree string="Handover Leads" decoration-info="is_handover_lead == True">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="team_id"/>
                    <field name="user_id"/>
                    <field name="stage_id"/>
                    <field name="parent_lead_id" string="Original Sales Lead"/>
                    <field name="handover_date"/>
                    <field name="expected_revenue"/>
                    <field name="is_handover_lead" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- Search view for handover leads - MOVED BEFORE ACTION -->
        <record id="crm_lead_handover_search_view" model="ir.ui.view">
            <field name="name">crm.lead.handover.search</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <search string="Search Handover Leads">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="team_id"/>
                    <field name="parent_lead_id"/>
                    <filter string="Handover Leads" name="handover_leads" domain="[('is_handover_lead', '=', True)]"/>
                    <filter string="Sales Leads" name="sales_leads" domain="[('is_handover_lead', '=', False)]"/>
                    <separator/>
                    <filter string="Solution Delivery Team" name="solution_delivery" domain="[('team_id.name', 'ilike', 'solution delivery')]"/>
                    <filter string="Sales Team" name="sales_team" domain="[('team_id.name', 'ilike', 'sales')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Team" name="team" context="{'group_by': 'team_id'}"/>
                        <filter string="Stage" name="stage" context="{'group_by': 'stage_id'}"/>
                        <filter string="Handover Date" name="handover_date" context="{'group_by': 'handover_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_view_handover_leads" model="ir.actions.act_window">
            <field name="name">Solution Delivery Leads</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                          (0, 0, {'view_mode': 'tree', 'view_id': ref('crm_lead_handover_tree_view')}),
                                          (0, 0, {'view_mode': 'form', 'view_id': ref('crm.crm_lead_view_form')})]"/>
             <field name="domain">[('parent_lead_id', '=', active_id)]</field>
            <field name="context">{'search_default_parent_lead_id': active_id, 'default_parent_lead_id': active_id, 'search_default_handover_leads': 1}</field>
            <field name="search_view_id" ref="crm_lead_handover_search_view"/>
            <field name="help" type="html">
                <p>
                    View leads created in Solution Delivery team from this sales opportunity. These leads help the delivery team maintain client relationships and track their own revenue targets.
                </p>
            </field>
        </record>

        <!-- Action for viewing participants -->
        <record id="action_view_participants" model="ir.actions.act_window">
            <field name="name">Participants</field>
            <field name="res_model">crm.participant</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('lead_id', '=', active_id)]</field>
            <field name="context">{'default_lead_id': active_id, 'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No participants yet!
                </p>
                <p>
                    Add participants for this lead/opportunity. You can also import participant data from Excel or CSV files.
                </p>
            </field>
        </record>
        
        
        <record id="crm_inherit_form" model="ir.ui.view">
            <field name="name">Crm Lead</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form" />
            <field name="arch" type="xml">
                <!-- Add handover fields to the form -->
                <field name="team_id" position="after">
                    <field name="parent_lead_id" attrs="{'invisible': [('is_handover_lead', '=', False)]}" readonly="1"/>
                    <field name="handover_date" attrs="{'invisible': [('handover_date', '=', False)]}" readonly="1"/>
                    <field name="is_handover_lead" invisible="1"/>
                    <field name="is_won_stage" invisible="1"/>
                </field>

                <!-- Add participant data field using xpath -->
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <group>
                        <field name="has_participant_data" string="Has Participant Data"/>
                    </group>
                    <group string="Assessment Information" attrs="{'invisible': [('has_participant_data', '=', False)]}">
                        <field name="test_start_date" string="Start Date"/>
                        <field name="test_finish_date" string="End Date"/>
                        <field name="type_of_assessment" string="Type of Assessment"/>
                        <field name="assessment_language" string="Assessment Language"/>
                        <field name="purpose" string="Purpose" placeholder="What is the purpose of this assessment?"/>
                    </group>
                </xpath>
                 
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action" name="%(action_view_task_id)d"
                        context="{'default_partner_id': partner_id }"
                        icon="fa-tasks">
                        <field  string="Tasks" name="task_number" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="action" name="%(action_view_handover_leads)d"
                        context="{'default_partner_id': partner_id }"
                        icon="fa-handshake-o"
                        groups="peepl_crm.group_handover_user"
                        attrs="{'invisible': [('handover_number', '=', 0)]}">
                        <field  string="Handovers" name="handover_number" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="action" name="%(action_view_participants)d"
                        context="{'default_lead_id': active_id}"
                        icon="fa-users"
                        attrs="{'invisible': [('has_participant_data', '=', False)]}">
                        <field string="Participants" name="participant_count" widget="statinfo"/>
                    </button>
                  </div>
                <button name="%(crm.action_crm_lead2opportunity_partner)d" position="after">
                    <button name="%(action_view_crm_task_form)d" string="Create Task" type="action" class="btn-primary"/>
                    <button name="action_handover_to_solution_delivery" string="Handover to Team" type="object" 
                            class="btn-secondary"
                            groups="peepl_crm.group_handover_manager"
                            attrs="{'invisible': ['|', ('is_won_stage', '!=', True), ('is_handover_lead', '=', True)]}"/>
                </button>

                <!-- Add Participant Data section in notebook -->
                <xpath expr="//page[@name='lead']" position="after">
                    <page string="Participant Data" name="participant_data" attrs="{'invisible': [('has_participant_data', '=', False)]}">
                        <div class="alert alert-info" role="alert">
                            <strong>Import Data:</strong> You can import participant data from Excel or CSV files. 
                            Go to CRM → Participants menu and use the Import feature. Required columns: first_name, last_name
                        </div>
                        <field name="participant_ids" context="{'default_lead_id': active_id}" nolabel="1">
                            <tree editable="bottom" decoration-muted="active == False">
                                <field name="sequence" widget="handle"/>
                                <field name="first_name" required="1"/>
                                <field name="last_name" required="1"/>
                                <field name="gender"/>
                                <field name="email_address"/>
                                <field name="mobile_phone"/>
                                <field name="job_title_requiring_assessment"/>
                                <field name="position_level"/>
                                <field name="notes"/>
                                <field name="active" optional="hide"/>
                            </tree>
                            <form>
                                <sheet>
                                    <div class="oe_button_box" name="button_box">
                                        <button name="toggle_active" type="object"
                                                class="oe_stat_button" icon="fa-archive">
                                            <field name="active" widget="boolean_button"
                                                   options='{"terminology": "archive"}'/>
                                        </button>
                                    </div>
                                    <div class="oe_title">
                                        <h1>
                                            <div class="d-flex">
                                                <field name="first_name" class="text-break me-2" placeholder="First Name"/>
                                                <field name="last_name" class="text-break" placeholder="Last Name"/>
                                            </div>
                                        </h1>
                                    </div>
                                    <group>
                                        <group>
                                            <field name="gender"/>
                                            <field name="email_address"/>
                                            <field name="mobile_phone"/>
                                        </group>
                                        <group>
                                            <field name="job_title_requiring_assessment"/>
                                            <field name="position_level"/>
                                            <field name="sequence"/>
                                        </group>
                                    </group>
                                    <group string="Additional Information">
                                        <field name="notes" placeholder="Additional notes about this participant..."/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Global action for all handover leads -->
        <record id="action_all_handover_leads" model="ir.actions.act_window">
            <field name="name">All Handover Leads</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                          (0, 0, {'view_mode': 'tree', 'view_id': ref('crm_lead_handover_tree_view')}),
                                          (0, 0, {'view_mode': 'form', 'view_id': ref('crm.crm_lead_view_form')})]"/>
            <field name="domain">[('is_handover_lead', '=', True)]</field>
            <field name="context">{'search_default_handover_leads': 1}</field>
            <field name="search_view_id" ref="crm_lead_handover_search_view"/>
            <field name="help" type="html">
                <p>
                    Manage all leads that have been handed over from Sales to Solution Delivery team. These leads help track the complete customer lifecycle from sales to delivery and maintenance.
                </p>
            </field>
        </record>
        
        <!-- Menu item for handover management -->
        <menuitem id="menu_handover_leads" 
                  name="Handover Leads" 
                  parent="crm.crm_menu_sales" 
                  action="action_all_handover_leads"
                  groups="peepl_crm.group_handover_user"
                  sequence="15"/>
        
        <!-- Handover Wizard View -->
        <record id="view_crm_handover_wizard_form" model="ir.ui.view">
            <field name="name">crm.handover.wizard.form</field>
            <field name="model">crm.handover.wizard</field>
            <field name="arch" type="xml">
                <form string="Handover Lead to Another Team">
                    <div class="oe_title">
                        <h1>
                            <span>Handover Lead</span>
                        </h1>
                    </div>
                    <group>
                        <group string="Source Information">
                            <field name="source_lead_id" readonly="1"/>
                            <field name="source_team_id" readonly="1"/>
                        </group>
                        <group string="Target Information">
                            <field name="target_team_id" required="1"/>
                            <field name="assigned_user_id"/>
                        </group>
                    </group>
                    <group string="Handover Details">
                        <field name="handover_note" placeholder="Add any additional notes for the receiving team..."/>
                    </group>
                    <footer>
                        <button name="action_create_handover_lead" string="Create Handover" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_crm_handover_wizard_form" model="ir.actions.act_window">
            <field name="name">Handover Lead</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.handover.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_crm_handover_wizard_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
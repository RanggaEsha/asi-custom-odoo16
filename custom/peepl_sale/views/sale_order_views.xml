<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit existing Sale Order Line Tree View -->
        <record id="sale_order_line_view_tree_inherit_participant" model="ir.ui.view">
            <field name="name">sale.order.line.tree.participant</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_invoiced']" position="after">
                    <field name="qty_delivered_method" invisible="1"/>
                    <field name="participants_count" 
                           string="Participants" 
                           attrs="{'invisible': [('qty_delivered_method', '!=', 'participants')]}"/>
                    <field name="completed_participants_count" 
                           string="Completed" 
                           attrs="{'invisible': [('qty_delivered_method', '!=', 'participants')]}"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Sale Order Form View to enhance participant features -->
        <record id="sale_order_form_inherit_participant_enhanced" model="ir.ui.view">
            <field name="name">sale.order.form.participant.enhanced</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">            
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="participant_count" invisible="1"/>
                    <field name="is_product_participant" invisible="1"/>
                </xpath>

                <xpath expr="//button[@name='action_view_invoice']" position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Sale Order Tree View to show participant info -->
        <record id="sale_order_tree_inherit_participant" model="ir.ui.view">
            <field name="name">sale.order.tree.participant</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="participant_count" 
                           string="Participants"
                           attrs="{'invisible': [('has_participant_data', '=', False)]}"/>
                    <field name="has_participant_data" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="cancel_purchase_request_form">
        <field name="name">Cancel Purchase Request</field>
        <field name="model">cancel.purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Confirm" name="execute" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_cancel_purchase_request">
        <field name="name">Cancel Purchase Request</field>
        <field name="res_model">cancel.purchase.request</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Security Groups -->
        <record id="group_audit_user" model="res.groups">
            <field name="name">Audit User</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Can view own audit sessions and logs</field>
        </record>

        <record id="group_audit_manager" model="res.groups">
            <field name="name">Audit Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('group_audit_user'))]"/>
            <field name="comment">Full access to all audit logs, sessions, and configurations</field>
        </record>

        <!-- Record Rules for Audit Log Entry -->
        <record id="audit_log_entry_user_rule" model="ir.rule">
            <field name="name">Audit Log Entry: Users can only see own logs</field>
            <field name="model_id" ref="peepl_audit_session.model_audit_log_entry"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_audit_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="audit_log_entry_manager_rule" model="ir.rule">
            <field name="name">Audit Log Entry: Managers can see all logs</field>
            <field name="model_id" ref="peepl_audit_session.model_audit_log_entry"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_audit_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Audit Session -->
        <record id="audit_session_user_rule" model="ir.rule">
            <field name="name">Audit Session: Users can only see own sessions</field>
            <field name="model_id" ref="peepl_audit_session.model_audit_session"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_audit_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="audit_session_manager_rule" model="ir.rule">
            <field name="name">Audit Session: Managers can see all sessions</field>
            <field name="model_id" ref="peepl_audit_session.model_audit_session"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_audit_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Audit Session Tree View -->
        <record id="audit_session_tree" model="ir.ui.view">
            <field name="name">audit.session.tree</field>
            <field name="model">audit.session</field>
            <field name="arch" type="xml">
                <tree string="User Sessions" 
                    decoration-success="status=='active'" 
                    decoration-muted="status in ['logged_out', 'expired', 'replaced']" 
                    decoration-warning="status=='forced_logout'"
                    decoration-danger="status=='error'">
                    <field name="status" widget="badge" 
                        decoration-success="status=='active'"
                        decoration-warning="status in ['expired', 'forced_logout']"
                        decoration-info="status in ['logged_out', 'replaced']"
                        decoration-danger="status=='error'"/>
                    <field name="user_id"/>
                    <field name="login_time"/>
                    <field name="logout_time"/>
                    <field name="duration" widget="float_time"/>
                    <field name="ip_address"/>
                    <field name="device_type"/>
                    <field name="browser"/>
                    <field name="os"/>
                    <field name="country"/>
                    <field name="city"/>
                    <field name="log_count"/>
                    <field name="last_activity"/>
                    <field name="heartbeat_count"/>
                    <field name="browser_closed" widget="boolean_toggle"/>
                    <field name="concurrent_sessions"/>
                    <button name="action_view_logs" type="object" icon="fa-list" 
                            title="View Activity Logs" class="btn-link"/>
                    <button name="action_force_close" type="object" icon="fa-times-circle" 
                            title="Force Close Session" class="btn-link text-danger"
                            groups="peepl_audit_session.group_audit_manager"
                            attrs="{'invisible': [('status', '!=', 'active')]}"/>
                </tree>
            </field>
        </record>

        <!-- Audit Session Form View -->
        <record id="audit_session_form" model="ir.ui.view">
            <field name="name">audit.session.form</field>
            <field name="model">audit.session</field>
            <field name="arch" type="xml">
                <form string="User Session">
                    <header>
                        <field name="status" widget="statusbar" 
                            statusbar_visible="active,logged_out,expired,forced_logout,replaced,error"/>
                        <button name="action_force_close" type="object" icon="fa-times-circle" 
                            title="Force Close Session" class="btn-link text-danger"
                            groups="peepl_audit_session.group_audit_manager"
                            attrs="{'invisible': [('status', '!=', 'active')]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_logs" type="object" 
                                    class="oe_stat_button" icon="fa-list">
                                <field name="log_count" widget="statinfo" string="Activities"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                            <div class="alert alert-success" role="alert" 
                                attrs="{'invisible': [('status', '!=', 'active')]}">
                                <strong>Active Session</strong> - User is currently logged in
                                <span attrs="{'invisible': [('heartbeat_count', '=', 0)]}">
                                    (Last heartbeat: <field name="last_activity" readonly="1"/> - <field name="heartbeat_count" readonly="1"/> heartbeats)
                                </span>
                            </div>
                            
                            <div class="alert alert-warning" role="alert" 
                                attrs="{'invisible': [('browser_closed', '!=', True)]}">
                                <strong>Browser Close Detected</strong> - This session was closed due to browser/tab closure
                            </div>
                            
                            <div class="alert alert-info" role="alert" 
                                attrs="{'invisible': [('concurrent_sessions', '=', 0)]}">
                                <strong>Concurrent Sessions</strong> - This user had <field name="concurrent_sessions" readonly="1"/> other active sessions
                            </div>
                        </div>
                        
                        <group>
                            <group string="Session Info">
                                <field name="user_id"/>
                                <field name="session_id"/>
                                <field name="login_time"/>
                                <field name="logout_time"/>
                                <field name="duration" widget="float_time"/>
                                <field name="last_activity"/>
                                <field name="heartbeat_count"/>
                                <field name="browser_closed"/>
                                <field name="concurrent_sessions"/>
                            </group>
                            <group string="Technical Info">
                                <field name="ip_address"/>
                                <field name="device_name"/>
                                <field name="device_type"/>
                                <field name="browser"/>
                                <field name="os"/>
                            </group>
                        </group>
                        
                        <group string="Location Info">
                            <group>
                                <field name="country"/>
                                <field name="city"/>
                            </group>
                            <group>
                                <field name="latitude"/>
                                <field name="longitude"/>
                            </group>
                        </group>
                        
                        <group string="Additional Info" attrs="{'invisible': [('error_message', '=', False)]}">
                            <field name="error_message"/>
                        </group>
                        
                        <notebook>
                            <page string="Activity Logs">
                                <field name="log_entry_ids">
                                    <tree decoration-success="action_type=='create'" 
                                        decoration-info="action_type=='read'"
                                        decoration-warning="action_type=='write'" 
                                        decoration-danger="action_type=='unlink'">
                                        <field name="action_date"/>
                                        <field name="action_type" widget="badge"
                                            decoration-success="action_type=='create'"
                                            decoration-info="action_type=='read'"
                                            decoration-warning="action_type=='write'"
                                            decoration-danger="action_type=='unlink'"/>
                                        <field name="model_name"/>
                                        <field name="res_name"/>
                                        <field name="res_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Technical Details">
                                <group>
                                    <field name="user_agent" widget="text"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Audit Session Search View -->
        <record id="audit_session_search" model="ir.ui.view">
            <field name="name">audit.session.search</field>
            <field name="model">audit.session</field>
            <field name="arch" type="xml">
                <search string="User Sessions">
                    <field name="user_id"/>
                    <field name="ip_address"/>
                    <field name="country"/>
                    <field name="city"/>
                    <field name="device_type"/>
                    <field name="browser"/>
                    <field name="os"/>
                    <filter string="Active Sessions" name="active" domain="[('status', '=', 'active')]"/>
                    <filter string="Logged Out" name="logged_out" domain="[('status', '=', 'logged_out')]"/>
                    <filter string="Expired" name="expired" domain="[('status', '=', 'expired')]"/>
                    <filter string="Replaced Sessions" name="replaced" domain="[('status', '=', 'replaced')]"/>
                    <filter string="Forced Logout" name="forced_logout" domain="[('status', '=', 'forced_logout')]"/>
                    <filter string="Error Sessions" name="error" domain="[('status', '=', 'error')]"/>
                    <filter string="Forced Logout" name="forced_logout" domain="[('status', '=', 'forced_logout')]"/>
                    <filter string="Browser Closed" name="browser_closed" domain="[('browser_closed', '=', True)]"/>
                    <separator/>
                    <filter string="Recent Activity (1h)" name="recent_activity" 
                            domain="[('last_activity', '>=', (datetime.datetime.now() - datetime.timedelta(hours=1)).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                    <filter string="Stale Sessions" name="stale_sessions" 
                            domain="[('status', '=', 'active'), ('last_activity', '&lt;', (datetime.datetime.now() - datetime.timedelta(minutes=30)).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('login_time', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <filter string="This Week" name="this_week" domain="[('login_time', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" domain="[('login_time', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter string="Mobile" name="mobile" domain="[('device_type', '=', 'mobile')]"/>
                    <filter string="Desktop" name="desktop" domain="[('device_type', '=', 'desktop')]"/>
                    <filter string="Tablet" name="tablet" domain="[('device_type', '=', 'tablet')]"/>
                    <group expand="0" string="Group By">
                        <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                        <filter string="Device Type" name="group_by_device" context="{'group_by': 'device_type'}"/>
                        <filter string="Country" name="group_by_country" context="{'group_by': 'country'}"/>
                        <filter string="Login Date" name="group_by_date" context="{'group_by': 'login_time:day'}"/>
                        <filter string="Browser Closed" name="group_by_browser_closed" context="{'group_by': 'browser_closed'}"/>
                        <filter string="Last Activity" name="group_by_last_activity" context="{'group_by': 'last_activity:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Audit Session Kanban View -->
        <record id="audit_session_kanban" model="ir.ui.view">
            <field name="name">audit.session.kanban</field>
            <field name="model">audit.session</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="user_id"/>
                    <field name="login_time"/>
                    <field name="status"/>
                    <field name="ip_address"/>
                    <field name="device_type"/>
                    <field name="country"/>
                    <field name="log_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <t t-esc="record.user_id.value"/>
                                        </strong>
                                        <span class="badge" t-att-class="'badge-' + (record.status.raw_value == 'active' ? 'success' : record.status.raw_value == 'error' ? 'danger' : 'secondary')">
                                            <t t-esc="record.status.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><i class="fa fa-clock-o"/> <t t-esc="record.login_time.value"/></div>
                                    <div><i class="fa fa-globe"/> <t t-esc="record.ip_address.value"/> - <t t-esc="record.country.value"/></div>
                                    <div><i class="fa fa-desktop"/> <t t-esc="record.device_type.value"/></div>
                                    <div><i class="fa fa-list"/> <t t-esc="record.log_count.value"/> activities</div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Audit Session Action -->
        <record id="action_audit_session" model="ir.actions.act_window">
            <field name="name">User Sessions</field>
            <field name="res_model">audit.session</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No user sessions found!
                </p>
                <p>
                    User sessions are automatically created when users log in.
                    Sessions track login time, device info, location, and user activities.
                </p>
            </field>
        </record>

        <record id="action_session_monitoring" model="ir.actions.act_window">
            <field name="name">Session Monitoring</field>
            <field name="res_model">audit.session</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('status', 'in', ['active', 'logged_out'])]</field>
            <field name="context">{
                'search_default_active': 1,
                'search_default_today': 1,
                'search_default_group_by_status': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No active sessions to monitor!
                </p>
                <p>
                    This view shows active and recent user sessions for monitoring purposes.
                    You can force close active sessions if needed.
                </p>
            </field>
        </record>

    </data>
</odoo>